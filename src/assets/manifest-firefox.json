{
	"manifest_version": 3,
	"name": "Evelyn: View Reddit comments on Dropout",
	"short_name": "Evelyn",
	"description": "Step up your viewing experience by embedding relevant Reddit comments under Dropout videos.",
	"version": "0.2.0",
	"action": {
		"default_icon": "icon-48.png"
	},
	"icons": {
		"16": "icon-16.png",
		"48": "icon-48.png",
		"128": "icon-128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://*.dropout.tv/videos/*"
			],
			"js": [
				"index.js"
			],
			"run_at": "document_end"
		}
	],
	"background": {
		"scripts": [
			"service-worker.js"
		]
	},
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "{c612d0e1-642f-49c0-aa7c-197b37798856}",
			"strict_min_version": "127.0"
		}
	},
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://www.reddit.com/"
	]
}
